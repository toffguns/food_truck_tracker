<p id="notice"><%= notice %></p>

<h1>Listing Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= link_to image_tag(truck.image.url(:small)), truck %></td>
        <td><%= link_to truck.name, truck %></td>
        <td><%= truck.cuisine %></td>
        <td><%= truck.menu %></td>
        <% if truck.owner == current_owner %>
          <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
          <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<% if !current_owner.nil? %>
  <%= link_to 'New Truck', new_truck_path %>
<% end %>
