<p id="notice"><%= notice %></p>

<h1>Listing Trucks</h1>

<table class='table table-responsive'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td> <%= link_to image_tag(truck.image.url(:small)), truck.image.url %> </td>
        <td><%= truck.name %></td>
        <td><%= truck.cuisine %></td>
        <td><%= truck.menu %></td>
        <td><%= link_to 'View Truck', truck, class:'btn btn-default' %></td>
        <% if truck.owner == current_owner %>
          <td><%= link_to 'Edit Truck Info', edit_truck_path(truck), class:'btn btn-default' %></td>
          <td><%= link_to 'Remove Truck', truck, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<% if !current_owner.nil? %>
  <%= link_to ' Create a New Truck', new_truck_path, class:'btn btn-default' %>
<% end %>
