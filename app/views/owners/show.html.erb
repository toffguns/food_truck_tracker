


<div class="page-header">
  <%= link_to owners_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_owner_path(@owner), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit Owner
  <% end %>
  <h1><%= @owner.email %></h1>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owner.trucks.each do |truck| %>
      <tr>
        <td><%= truck.name %></td>
        <td><%= truck.cuisine %></td>
        <td><%= truck.menu %></td>
        <td><%= link_to 'Show', truck %></td>
        <% if truck.owner == current_owner %>
          <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
          <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'New Time And Place', new_time_and_place_path() + "?truck_id=" + truck.id.to_s %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render '/trucks/form' %>

