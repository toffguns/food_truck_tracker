
<div class="container">
  <div class="row">
    <div class="col-sm-5" id="facebook-container">
      <h2>Log in as Contributor</h2>

      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(:contributor) %><br />
      <% end -%>


      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(:contributor) %><br />
      <% end -%>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(:contributor) %><br />
      <% end -%>

      <%- Contributor.omniauth_providers.each do |provider| %>
        <%= link_to image_tag("facebook2.png"), omniauth_authorize_path(:contributor, provider) %><br />
      <% end -%>

    </div>

    <div class="col-sm-1"></div>

    <div class="col-sm-5" id="log-in-container">
      <h2>Log in as a Food Truck Owner</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-field" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-field" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
