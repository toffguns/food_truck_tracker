<% if !@result.blank? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Cuisine</th>
        <th>Menu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @result.each do |truck| %>
        <tr>
          <td><%= truck.name %></td>
          <td><%= truck.cuisine %></td>
          <td><%= truck.menu %></td>
          <td><%= link_to 'Show', truck %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div>
  <h1 id="map-title"><center> Live Map of Food Trucks in San Diego</center></h1>

  <div id="map-container">
    <div id="map">Your map will appear here...</div>
  </div>
</div>

  <div class="row" id="largebutton">
    <div class="col-m-6">
    <a href="/trucks"><button type="button" class="btn btn-danger btn-lg btn-block" id="largebutton">Click to View List of All Trucks</button></a>
  </div>
</div>
